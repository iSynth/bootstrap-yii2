{
  "parserOptions": {
    "ecmaVersion": 5
  },
  "extends": [
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [2, {
      "singleQuote": true,
      "trailingComma": "es5",
      "bracketSpacing": true,
      "jsxBracketSameLine": true,
      "parser": "flow"
    }],
    "indent": [2, 2, {"SwitchCase": 1}],
    "max-len": [2, 120, 2]
  }
}
